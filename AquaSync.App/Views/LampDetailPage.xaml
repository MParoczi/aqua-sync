<Page
  x:Class="AquaSync.App.Views.LampDetailPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="using:AquaSync.App.ViewModels"
  xmlns:controls="using:AquaSync.App.Controls"
  xmlns:converters="using:AquaSync.App.Converters">

  <Page.Resources>
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibility" />
  </Page.Resources>

  <ScrollViewer>
    <StackPanel Spacing="24" Padding="36,24">

      <!-- Header: Back button + lamp identity -->
      <Grid Margin="0,0,0,8">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
          Grid.Column="0"
          Command="{x:Bind ViewModel.GoBackCommand}"
          VerticalAlignment="Top"
          Margin="0,4,16,0">
          <FontIcon Glyph="&#xE76B;" FontFamily="{ThemeResource SymbolThemeFontFamily}" />
        </Button>

        <StackPanel Grid.Column="1" Spacing="2">
          <TextBlock
            Text="{x:Bind ViewModel.Lamp.ModelName, Mode=OneWay}"
            Style="{StaticResource TitleTextBlockStyle}" />
          <TextBlock
            Text="{x:Bind ViewModel.Lamp.DeviceName, Mode=OneWay}"
            Style="{StaticResource CaptionTextBlockStyle}"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            TextTrimming="CharacterEllipsis" />
          <TextBlock
            Text="{x:Bind ViewModel.ConnectionStateText, Mode=OneWay}"
            Style="{StaticResource CaptionTextBlockStyle}"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>
      </Grid>

      <!-- Connecting overlay -->
      <Grid Visibility="{x:Bind ViewModel.IsConnecting, Mode=OneWay, Converter={StaticResource BoolToVisibility}}">
        <ProgressRing IsActive="True" Width="40" Height="40" HorizontalAlignment="Center" Margin="0,16" />
      </Grid>

      <!-- Unmanaged InfoBar -->
      <InfoBar
        IsOpen="{x:Bind ViewModel.IsUnmanaged, Mode=OneWay}"
        Severity="Warning"
        Title="Unsupported Model"
        Message="This lamp model is not yet supported. Controls are unavailable."
        IsClosable="False" />

      <!-- Disconnect InfoBar -->
      <InfoBar
        IsOpen="{x:Bind ViewModel.IsDisconnected, Mode=OneWay}"
        Severity="Warning"
        Title="Disconnected"
        Message="The device connection was lost."
        IsClosable="False" />

      <!-- ═══ Manual Brightness section ══════════════════════════════════════ -->

      <TextBlock
        Text="Manual Brightness"
        Style="{StaticResource SubtitleTextBlockStyle}"
        Visibility="{x:Bind ViewModel.IsManaged, Mode=OneWay, Converter={StaticResource BoolToVisibility}}" />

      <ItemsControl
        ItemsSource="{x:Bind ViewModel.Channels, Mode=OneWay}"
        IsEnabled="{x:Bind ViewModel.IsInteractionEnabled, Mode=OneWay}"
        Visibility="{x:Bind ViewModel.IsManaged, Mode=OneWay, Converter={StaticResource BoolToVisibility}}">
        <ItemsControl.ItemTemplate>
          <DataTemplate x:DataType="vm:ChannelSlider">
            <Grid Padding="0,4">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="72" />
                <ColumnDefinition Width="*" MinWidth="0" />
                <ColumnDefinition Width="48" />
              </Grid.ColumnDefinitions>

              <TextBlock
                Grid.Column="0"
                Text="{x:Bind Label}"
                VerticalAlignment="Center" />

              <Slider
                Grid.Column="1"
                Minimum="0"
                Maximum="100"
                StepFrequency="1"
                Value="{x:Bind Value, Mode=TwoWay}"
                PointerCaptureLost="Slider_PointerCaptureLost"
                Margin="8,0" />

              <TextBlock
                Grid.Column="2"
                Text="{x:Bind ValueLabel, Mode=OneWay}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />
            </Grid>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

      <!-- ═══ Schedule section (managed lamps only) ═════════════════════════ -->

      <StackPanel
        Spacing="16"
        Visibility="{x:Bind ViewModel.IsManaged, Mode=OneWay, Converter={StaticResource BoolToVisibility}}">

        <TextBlock Text="Schedule" Style="{StaticResource SubtitleTextBlockStyle}" />

        <!-- Timeline editor -->
        <controls:ScheduleEditorControl
          SunriseTime="{x:Bind ViewModel.ScheduleSunrise, Mode=TwoWay}"
          SunsetTime="{x:Bind ViewModel.ScheduleSunset, Mode=TwoWay}"
          RampUpMinutes="{x:Bind ViewModel.ScheduleRampUpMinutes, Mode=OneWay}" />

        <!-- Sunrise / Sunset time pickers -->
        <Grid ColumnSpacing="12">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <StackPanel Grid.Column="0" Spacing="4">
            <TextBlock Text="Sunrise" />
            <TimePicker
              SelectedTime="{x:Bind ViewModel.SunriseTimeSpan, Mode=OneWay}"
              SelectedTimeChanged="SunriseTimePicker_SelectedTimeChanged"
              ClockIdentifier="24HourClock"
              HorizontalAlignment="Stretch" />
          </StackPanel>

          <StackPanel Grid.Column="1" Spacing="4">
            <TextBlock Text="Sunset" />
            <TimePicker
              SelectedTime="{x:Bind ViewModel.SunsetTimeSpan, Mode=OneWay}"
              SelectedTimeChanged="SunsetTimePicker_SelectedTimeChanged"
              ClockIdentifier="24HourClock"
              HorizontalAlignment="Stretch" />
          </StackPanel>
        </Grid>

        <!-- Ramp-up duration -->
        <StackPanel Spacing="4">
          <TextBlock Text="Ramp-Up Duration (minutes)" />
          <NumberBox
            Minimum="0"
            Maximum="150"
            SpinButtonPlacementMode="Compact"
            Value="{x:Bind ViewModel.ScheduleRampUpMinutesDouble, Mode=TwoWay}" />
        </StackPanel>

        <!-- Active days (Mon → Sun per FR-043) -->
        <StackPanel Spacing="4">
          <TextBlock Text="Active Days" />
          <StackPanel Orientation="Horizontal" Spacing="4">
            <CheckBox Content="Mon" IsChecked="{x:Bind ViewModel.ScheduleMonday, Mode=TwoWay}" />
            <CheckBox Content="Tue" IsChecked="{x:Bind ViewModel.ScheduleTuesday, Mode=TwoWay}" />
            <CheckBox Content="Wed" IsChecked="{x:Bind ViewModel.ScheduleWednesday, Mode=TwoWay}" />
            <CheckBox Content="Thu" IsChecked="{x:Bind ViewModel.ScheduleThursday, Mode=TwoWay}" />
            <CheckBox Content="Fri" IsChecked="{x:Bind ViewModel.ScheduleFriday, Mode=TwoWay}" />
            <CheckBox Content="Sat" IsChecked="{x:Bind ViewModel.ScheduleSaturday, Mode=TwoWay}" />
            <CheckBox Content="Sun" IsChecked="{x:Bind ViewModel.ScheduleSunday, Mode=TwoWay}" />
          </StackPanel>
        </StackPanel>

        <!-- Schedule channel brightness (peak levels) -->
        <TextBlock Text="Schedule Brightness" Style="{StaticResource BodyStrongTextBlockStyle}" />

        <ItemsControl ItemsSource="{x:Bind ViewModel.ScheduleChannels, Mode=OneWay}">
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:ChannelSlider">
              <Grid Padding="0,4">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="72" />
                  <ColumnDefinition Width="*" MinWidth="0" />
                  <ColumnDefinition Width="48" />
                </Grid.ColumnDefinitions>

                <TextBlock
                  Grid.Column="0"
                  Text="{x:Bind Label}"
                  VerticalAlignment="Center" />

                <Slider
                  Grid.Column="1"
                  Minimum="0"
                  Maximum="100"
                  StepFrequency="1"
                  Value="{x:Bind Value, Mode=TwoWay}"
                  Margin="8,0" />

                <TextBlock
                  Grid.Column="2"
                  Text="{x:Bind ValueLabel, Mode=OneWay}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Right" />
              </Grid>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Save button row -->
        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
          <Button
            Content="Save Schedule"
            IsEnabled="{x:Bind ViewModel.IsScheduleValid, Mode=OneWay}"
            Command="{x:Bind ViewModel.SaveScheduleCommand}" />
          <ProgressRing
            Width="20"
            Height="20"
            IsActive="{x:Bind ViewModel.IsSavingSchedule, Mode=OneWay}" />
        </StackPanel>

        <!-- Validation message -->
        <TextBlock
          Text="{x:Bind ViewModel.ValidationMessage, Mode=OneWay}"
          Foreground="{ThemeResource SystemFillColorCriticalBrush}"
          Visibility="{x:Bind ViewModel.ValidationMessage, Mode=OneWay, Converter={StaticResource StringNotEmptyToVisibility}}" />

      </StackPanel>

      <!-- Error InfoBar -->
      <InfoBar
        IsOpen="{x:Bind ViewModel.IsErrorOpen, Mode=TwoWay}"
        Severity="Error"
        Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
        IsClosable="True" />

    </StackPanel>
  </ScrollViewer>

</Page>
