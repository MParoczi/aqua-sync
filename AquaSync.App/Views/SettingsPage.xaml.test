<Page
  x:Class="AquaSync.App.Views.SettingsPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:models="using:AquaSync.App.Models"
  xmlns:converters="using:AquaSync.App.Converters">
  <Page.Resources>
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibility" />
  </Page.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid Grid.Row="0" Padding="24,24,24,16">
      <TextBlock Text="Settings" Style="{StaticResource TitleTextBlockStyle}" />
    </Grid>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="180" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <ListView Grid.Column="0" x:Name="SectionListView" SelectionMode="Single" SelectionChanged="SectionListView_SelectionChanged">
        <ListViewItem Tag="Application">
          <TextBlock Text="Application" />
        </ListViewItem>
        <ListViewItem Tag="Aquarium">
          <TextBlock Text="Aquarium" />
        </ListViewItem>
        <ListViewItem Tag="Data">
          <TextBlock Text="Data" />
        </ListViewItem>
        <ListViewItem Tag="About">
          <TextBlock Text="About" />
        </ListViewItem>
      </ListView>
      <Border Grid.Column="1" Width="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" />
      <TextBlock Grid.Column="2" Text="Content" Margin="24" />
    </Grid>
  </Grid>
</Page>
